<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/white_girl3"
        android:id="@+id/white_girl"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/white_girl"
        android:text="淑女学生蕾丝连衣裙，修身甜美小清新"
        android:layout_margin="10dp"
        android:id="@+id/whitegirl_title"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_below="@+id/whitegirl_title"
        android:layout_alignLeft="@id/whitegirl_title"
        android:id="@+id/speciality"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isAuction"
            android:text="拍卖品"
            android:textColor="@color/white"
            android:background="@color/green"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isExchangable"
            android:text="物换物"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isNoBargain"
            android:text="一口价"
            android:textColor="@color/white"
            android:background="@color/red"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥ 100000"
        android:layout_below="@+id/speciality"
        android:layout_alignLeft="@+id/speciality"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:id="@+id/price"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_alignLeft="@+id/price"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="截止时间：2016.03.05"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:maxLines="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参与人数：99"
            android:textSize="12sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/white_girl"
        android:layout_alignLeft="@id/white_girl">

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="取消订单"
            android:gravity="center"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="联系卖家"
            android:gravity="center"
            android:background="@color/green"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            />
        <TextView
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:text="同意退款"
        android:gravity="center"
        android:background="@color/gray"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        />
        <TextView
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:text="我要加价"
        android:gravity="center"
        android:background="@color/red"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        />
    </LinearLayout>

</RelativeLayout>